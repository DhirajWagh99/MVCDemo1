<div class="container">
    <h3> Thank you !!</h3>
    <table class="table">
        <tr>
            <td> First name </td>
            <td>  @ViewBag.firstname </td>
        </tr>
        <tr>
            <td>Last name</td>
            <td> @ViewBag.lastname</td>
        </tr>
        <tr>
            <td>Mobile Number</td>
            <td> @ViewBag.phone</td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>@ViewBag.gender</td>
        </tr>
