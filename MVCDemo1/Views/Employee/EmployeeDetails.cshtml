@{
}
@using (Html.BeginForm()) 
{
    <div class="container">
        <table class="table">
            <tr>
                <th>First Name</th>
                <td>
                    @Html.TextBox("firstname")  
                </td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>
                    @Html.TextBox("lastname")
                </td>
            </tr>
            <tr>
                <th>Mobile Number</th>
                <td>
                    @Html.TextBox("phone")
                </td>
            </tr>
            <tr>
                <th>Select Gender</th>
                <td>
                    @Html.RadioButton("Gender","Male") Male
                    @Html.RadioButton("Gender","Female") Female
                </td>
            </tr>
            <tr>
                <th>Select Department</th>
                <td>
                    <input type="checkbox" value="Human Resources" name="Department" /> Human Resources
                    <input type="checkbox" value="Sales" name="Department" /> Sales
                    <input type="checkbox" value="Finance" name="Department" /> Finance
                </td>
            </tr>
            <tr>
                <th>Are You Ok With 2 year Bond?</th>
                <td>
                    @Html.DropDownList("Options");
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Submit" />
                </td>
            </tr>
        </table>

    </div>
    
}

